{
  "name": "elevate-backend",
  "private": true,
  "version": "0.1.0",
  "description": "ELEVATE Platform backend (Node.js + Express + TypeScript)",
  "type": "commonjs",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "PRISMA_ENGINES_CHECKSUM_IGNORE_MISSING=1 prisma generate --no-engine && tsc --outDir dist",
    "start": "node start.js",
    "start:prod": "NODE_ENV=production node dist/server.js",
    "postbuild": "echo 'Build complete'",
    "deploy": "npm run build && npm run start",
    "test": "jest",
    "test:unit": "jest --testPathIgnorePatterns=integration",
    "test:integration": "jest tests/integration",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "prisma:generate": "prisma generate --no-engine",
    "prisma:push": "prisma db push",
    "prisma:studio": "prisma studio",
    "prisma:deploy": "prisma db push --accept-data-loss"
  },
  "dependencies": {
    "@emailjs/nodejs": "^5.0.2",
    "@prisma/client": "^6.19.0",
    "@prisma/extension-accelerate": "^1.2.1",
    "@types/bcrypt": "^6.0.0",
    "@types/nodemailer": "^7.0.3",
    "@types/pdfkit": "^0.17.3",
    "@types/socket.io": "^3.0.1",
    "axios": "^1.13.2",
    "bcrypt": "^6.0.0",
    "cloudinary": "^2.8.0",
    "cors": "^2.8.5",
    "csv-writer": "^1.6.0",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^8.1.0",
    "express-validator": "^7.3.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "nodemailer": "^7.0.10",
    "pdfkit": "^0.17.2",
    "puppeteer": "^24.26.1",
    "resend": "^6.3.0",
    "socket.io": "^4.8.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^20.12.12",
    "@types/supertest": "^6.0.3",
    "@types/swagger-jsdoc": "^6.0.4",
    "jest": "^30.2.0",
    "prisma": "^6.19.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.5",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.6.3"
  }
}
