{
  "info": {
    "name": "ELEVATE API Collection",
    "description": "Complete API collection for ELEVATE learning platform with EmailJS-powered OTP delivery",
    "version": "1.0.0",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{jwt_token}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "base_url",
      "value": "https://elevate-system.onrender.com/api",
      "type": "string"
    },
    {
      "key": "local_url",
      "value": "http://localhost:4000/api",
      "type": "string"
    },
    {
      "key": "jwt_token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register User (Any Email)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user@gmail.com\",\n  \"name\": \"John Doe\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/register",
              "host": ["{{base_url}}"],
              "path": ["auth", "register"]
            },
            "description": "Register with any email domain - OTP sent via EmailJS"
          }
        },
        {
          "name": "Verify OTP",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user@gmail.com\",\n  \"otp\": \"123456\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/verify-otp",
              "host": ["{{base_url}}"],
              "path": ["auth", "verify-otp"]
            }
          }
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user@gmail.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/login",
              "host": ["{{base_url}}"],
              "path": ["auth", "login"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('jwt_token', response.data.token);",
                  "}"
                ]
              }
            }
          ]
        }
      ]
    },
    {
      "name": "Missions",
      "item": [
        {
          "name": "Get All Missions",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/missions",
              "host": ["{{base_url}}"],
              "path": ["missions"]
            }
          }
        },
        {
          "name": "Create Mission",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Learn React\",\n  \"description\": \"Master React fundamentals\",\n  \"deadline\": \"2024-12-31\",\n  \"category\": \"Technical\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/missions",
              "host": ["{{base_url}}"],
              "path": ["missions"]
            }
          }
        },
        {
          "name": "Get Mission by ID",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/missions/:id",
              "host": ["{{base_url}}"],
              "path": ["missions", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "mission_id_here"
                }
              ]
            }
          }
        },
        {
          "name": "Update Mission",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Updated Mission Title\",\n  \"progress\": 50\n}"
            },
            "url": {
              "raw": "{{base_url}}/missions/:id",
              "host": ["{{base_url}}"],
              "path": ["missions", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "mission_id_here"
                }
              ]
            }
          }
        },
        {
          "name": "Delete Mission",
          "request": {
            "method": "DELETE",
            "url": {
              "raw": "{{base_url}}/missions/:id",
              "host": ["{{base_url}}"],
              "path": ["missions", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "mission_id_here"
                }
              ]
            }
          }
        }
      ]
    },
